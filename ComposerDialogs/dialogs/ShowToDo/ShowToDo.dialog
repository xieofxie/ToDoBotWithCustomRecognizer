{
  "$type": "Microsoft.AdaptiveDialog",
  "$designer": {
    "id": "107562",
    "name": "ShowToDo"
  },
  "autoEndDialog": "true",
  "defaultResultProperty": "dialog.result",
  "triggers": [
    {
      "$type": "Microsoft.OnBeginDialog",
      "$designer": {
        "name": "BeginDialog",
        "id": "180122"
      },
      "actions": [
        {
          "$type": "Microsoft.SetProperties",
          "$designer": {
            "id": "725895",
            "name": "Set properties"
          },
          "assignments": [
            {
              "property": "$listType",
              "value": "=coalesce(@ListType, @roleListType, $listType)"
            }
          ]
        },
        {
          "$type": "Microsoft.ChoiceInput",
          "$designer": {
            "id": "807838",
            "name": "Multiple choice"
          },
          "prompt": "${bfdprompt-807838()}",
          "maxTurnCount": 3,
          "property": "dialog.listType",
          "value": "=coalesce(@ListType, @roleListType)",
          "alwaysPrompt": false,
          "allowInterruptions": "!@listType",
          "outputFormat": "value",
          "choices": [
            {
              "value": "Todo"
            },
            {
              "value": "Shopping"
            },
            {
              "value": "Grocery"
            }
          ],
          "appendChoices": "true",
          "defaultLocale": "en-us",
          "style": "Auto",
          "choiceOptions": {
            "inlineSeparator": ", ",
            "inlineOr": " or ",
            "inlineOrMore": ", or ",
            "includeNumbers": true
          },
          "recognizerOptions": {
            "noValue": false
          }
        },
        {
          "$type": "Microsoft.BeginDialog",
          "$designer": {
            "id": "ckEHvu"
          },
          "$kind": "Microsoft.BeginDialog",
          "dialog": "CountTotal",
          "options": {
            "listType": "${dialog.listType}"
          },
          "resultProperty": "dialog.count"
        },
        {
          "$type": "Microsoft.IfCondition",
          "$designer": {
            "id": "kqY3nC"
          },
          "$kind": "Microsoft.IfCondition",
          "condition": "dialog.count > 0",
          "actions": [
            {
              "$type": "Microsoft.SendActivity",
              "$designer": {
                "id": "ZEwh72"
              },
              "$kind": "Microsoft.SendActivity",
              "activity": "${bfdactivity-ZEwh72()}"
            },
            {
              "$type": "Microsoft.SendActivity",
              "$designer": {
                "id": "g0kIsI"
              },
              "$kind": "Microsoft.SendActivity",
              "activity": "${bfdactivity-g0kIsI()}"
            }
          ],
          "elseActions": [
            {
              "$type": "Microsoft.SendActivity",
              "$designer": {
                "id": "yD5ABI"
              },
              "$kind": "Microsoft.SendActivity",
              "activity": "${bfdactivity-yD5ABI()}"
            }
          ]
        }
      ]
    }
  ],
  "generator": "ShowToDo.lg",
  "recognizer": "ShowToDo.lu"
}
